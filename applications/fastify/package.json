{
  "name": "develhope-node-js-app-express",
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint src/ --cache --fix",
    "test": "jest",
    "build": "tsc",
    "build:dev": "tsc --watch",
    "start": "node --enable-source-maps dist/server.js",
    "start:dev": "nodemon --watch dist/ --watch .env",
    "dev": "npm run build && concurrently 'npm:build:dev' 'npm:start:dev'",
    "web": "serve -p 8080 web/"
  },
  "engines": {
    "node": ">=16"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/simonplend/develhope-node-js-app-express.git"
  },
  "author": "Simon Plenderleith <simon@simonplend.co.uk> (https://simonplend.com/)",
  "bugs": {
    "url": "https://github.com/simonplend/develhope-node-js-app-express/issues"
  },
  "homepage": "https://github.com/simonplend/develhope-node-js-app-express#readme",
  "devDependencies": {
    "@tsconfig/node16": "^1.0.2",
    "@types/jest": "^27.5.0",
    "@types/mime": "^2.0.3",
    "@types/node": "^17.0.31",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.22.0",
    "@typescript-eslint/parser": "^5.22.0",
    "concurrently": "^7.1.0",
    "eslint": "^8.14.0",
    "eslint-config-prettier": "^8.5.0",
    "jest": "^28.0.3",
    "nodemon": "^2.0.16",
    "prettier": "2.6.2",
    "prisma": "^3.13.0",
    "serve": "^13.0.2",
    "supertest": "^6.2.3",
    "ts-jest": "^28.0.0",
    "typescript": "^4.6.4"
  },
  "dependencies": {
    "@fastify/cors": "^8.0.0",
    "@fastify/static": "^6.4.0",
    "@fastify/type-provider-typebox": "^1.0.0",
    "@prisma/client": "^3.13.0",
    "@sinclair/typebox": "^0.23.5",
    "dotenv": "^16.0.0",
    "fastify": "^4.0.0",
    "fastify-multer": "^2.0.3",
    "fastify-plugin": "^3.0.1",
    "mime": "^3.0.0"
  }
}
